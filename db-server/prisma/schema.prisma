generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique
  username String @unique

}

model Market {
  id String @id 
  symbol String @unique
  endTime DateTime
  description String
  sourceOfTruth String
  category Category @relation(fields: [categoryId],references: [id])
  categoryId String @unique
  createdAt DateTime @default(now())

}

model Category {
  id String @id 
  title  String
  icon String
  description String
  createdAt DateTime @default(now())
  Markets Market[]
}

model Order {
  id  String @id
  userId String @unique
  marketId String @unique
  side String
  type String
  quantity Int
  price Int
  filled_quantity Int?
  timestamp DateTime @default(now())
  
}

model Trade {
  id         String  @id 
  buyOrderId String
  sellOrderId String
 
  price      Int
  timestamp  DateTime @default(now())
}
